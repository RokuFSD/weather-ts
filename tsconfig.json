{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "baseUrl": "./",
    "paths": {
      "*": [
        "./src/*"
      ]
    },
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exlude": [
    "node_modules",
    "dist"
  ],
}
